# Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# EMAIL SERVICE (Resend)
# ============================================
# Get your API key from: https://resend.com/api-keys
# Free tier: 100 emails/day, 3,000/month
RESEND_API_KEY=re_your_api_key_here

# Email address that sends the contact form emails
# Must be a verified domain in Resend (or use onboarding@resend.dev for testing)
RESEND_FROM_EMAIL=contact@yourdomain.com

# Email address that receives contact form submissions
PUBLIC_CONTACT_EMAIL=yourname@youremail.com

# ============================================
# SITE CONFIGURATION
# ============================================
# Site URL (used for sitemap generation and canonical URLs)
PUBLIC_SITE_URL=http://localhost:4321

# ============================================
# ANALYTICS (optional)
# ============================================
PUBLIC_GA_ID=

# ============================================
# SOCIAL MEDIA LINKS (optional)
# ============================================
PUBLIC_TWITTER_URL=
PUBLIC_LINKEDIN_URL=
PUBLIC_GITHUB_URL=
